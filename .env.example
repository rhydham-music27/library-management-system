# Flask CLI entry module/script
FLASK_APP=run.py

# Flask environment: development, production, or testing
FLASK_ENV=development

# Enable/disable debugger (1/0)
FLASK_DEBUG=1

# Application secret key (generate a strong random value for production)
SECRET_KEY=replace-with-a-secure-random-string

# Database URL. Default uses SQLite database in instance folder
# For SQLite, the path is relative to the project root when using instance_relative_config
